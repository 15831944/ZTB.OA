@model ZTB.OA.Model.ActionInfo
@using ZTB.OA.Model

@{
    ViewBag.Title = "SetRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("SetRolePost", "ActionInfo", new AjaxOptions() { OnSuccess = "setRole", HttpMethod = "Post" }))
{

    <h2>给 @Model.ActionName 设置权限角色</h2>
    <input type="hidden" name="uId" value="@Model.Id" />

    List<RoleInfo> roles = ViewBag.AllRoles as List<RoleInfo>;
    List<int> exitRoles = ViewBag.ExitRoles as List<int>;

    int i = 0;
    foreach (var role in roles)
    {
        string str = "ckb_" + role.Id;
        if (i % 3 == 0)
        {
            <hr />
        }
        if (exitRoles.Contains(role.Id))
        {
        <input type="checkbox" name="@str" id="@str"  checked="checked" />
        }
        else
        {
            <input type="checkbox" name="@str" id="@str" />
        }
        <label for="@str">@role.RoleName</label>
        i++;
    }
    <input type="submit" value="提交" class="btn btn-primary">
}


@section Scripts{
    <script>
        function setRole(data) {
            if (data == 'ok') {
                swal({
                    title: "提示",
                    text: "修改角色成功",
                    type: "success",
                    showCancelButton: false,
                    confirmButtonColor: "#AEDEF4",
                    confirmButtonText: "确定",
                    timer: 2000,
                    closeOnConfirm: false,
                }, function () {
                    parent.$("#searchForm").submit();
                    swal.close();
                    //当你在iframe页面关闭自身时
                    var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                    parent.layer.close(index); //再执行关闭
                });
            } else {
                swal("修改失败!")
            }
        }
    </script>
}
