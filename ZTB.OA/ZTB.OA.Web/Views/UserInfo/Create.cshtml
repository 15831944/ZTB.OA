@section Scripts {
    <script>
        function afterSuccess(data) {
            if (data == "ok") {
                parent.$("#showOk").click();
                //当你在iframe页面关闭自身时
                var index = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
                parent.layer.close(index); //再执行关闭
            } else {
                swal("添加失败!")
            }
        };

    </script>
