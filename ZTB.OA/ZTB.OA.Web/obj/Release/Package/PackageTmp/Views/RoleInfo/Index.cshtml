@model IEnumerable<ZTB.OA.Model.RoleInfo>
@using PagedList
@using PagedList.Mvc

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-top:10px; margin-bottom:10px">
    <input type="button" value="添加" id="createBtn" class="btn btn-primary" />
    <div class="form-inline" style="float:right">
        @using (Ajax.BeginForm("Index", "RoleInfo", new AjaxOptions()
        {
            HttpMethod = "Get",
            UpdateTargetId = "table",
            OnComplete = "PagedOnComplete"//防止ajax刷新后不能绑定事件
        }, new { id = "searchForm" }))
        {
            <input type="text" class="form-control" name="roleName" placeholder="角色名">
            <button type="submit" class="btn btn-info">搜索</button>
        }
    </div>
</div>
<div id="table">
    @Html.Partial("DataTablePartial")
</div>



@section Scripts {
    <script>
        function showSuccess(obj) {
            toastr.success(obj);
        }
        function showError(obj) {
            toastr.error(obj);
        }

        function PagedOnComplete() {
            //编辑
            $("a[name='modify']").click(function () {
                var id = $(this).attr('data-id');
                layer.open({
                    type: 2,
                    title: '用户修改',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['60%', '90%'],
                    content: '@Url.Action("Modify")' + '/' + id
                });
            });

            //删除
            $("a[name='delete']").click(function () {
                var id = $(this).attr('data-id');
                swal({
                    title: "提示",
                    text: "确定删除么?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "确定",
                    cancelButtonText: "取消",
                    closeOnConfirm: false,
                }, function () {
                    $.post('@Url.Action("Delete")', { id: id }, function (data) {
                        if (data == "ok") {
                            showSuccess("删除成功");
                            $("#searchForm").submit();
                            swal.close();
                        } else {
                            showError("删除失败");
                        }
                    });
                });
            });
        }
        $(document).ready(function () {
            $("#createBtn").click(function () {
                layer.open({
                    type: 2,
                    title: '用户添加',
                    shadeClose: true,
                    shade: 0.8,
                    area: ['60%', '90%'],
                    content: '@Url.Action("Create")'
                });
            });
            PagedOnComplete();
        });
    </script>
}